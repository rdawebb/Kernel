{
  "version": "0.1.0",
  "account": {
    "imap_server": "",
    "imap_port": 993,
    "smtp_server": "",
    "smtp_port": 587,
    "username": "",
    "email": "",
    "use_tls": true
  },
  "features": {
    "auto_sync": true,
    "auto_sync_interval": 5,
    "auto_backup": true,
    "auto_backup_interval": 1440,
    "notifications": true,
    "email_summarisation": true,
    "send_later": true
  },
  "ui": {
    "theme": "dark",
    "show_status_bar": true,
    "compact_mode": false,
    "show_preview_pane": true,
    "default_folder": "inbox",
    "manage_list_columns": [
      "from",
      "subject",
      "date"
    ]
  },
  "logging": {
    "log_level": "INFO",
    "console_level": "INFO",
    "file_level": "DEBUG",
    "max_file_size": 5242880,
    "backup_count": 5
  },
  "database": {
    "database_path": "data/kernel.db",
    "backup_path": "exports/backup.db",
    "export_path": "exports/"
  }
}